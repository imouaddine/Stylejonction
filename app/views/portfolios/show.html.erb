<h2> VIEW PORTFOLIO</h2>

<div> Portofilo id: <%= @portfolio.id %> </div>

<%- unless @portfolio.published? -%>
  <%= form_tag(publish_portfolio_path, :method => :put) do %>
    <%= submit_tag("Publish") %>
  <% end %>
<% end %>

<ul>
  
  <%- if @portfolio.layout.present? %>
    <li> layout: <%= @portfolio.layout.name %> </li>
  <% end %>
  <li> theme: <%= @portfolio.theme || "-" %> </li>
  <%- if @portfolio.font.present? %>
    <li> font: <%= @portfolio.font.name %> </li>
  <% end %>
   <%- if @portfolio.background.present? %>
    <li> background: <%= @portfolio.background.name %> </li>
  <% end %>
  <li> published? <%= @portfolio.published? %> </li>
</ul>
