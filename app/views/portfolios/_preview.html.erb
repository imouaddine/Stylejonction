<div id="preview_wrapper">	
	<div id="separator">
		<a id="dragger" href="#"><%= image_tag 'images/sep.png' %></a>
	</div>
	<section id="preview" class="full_width">

	</section>
</div>
<script type="text/javascript">
  $(function() {
    window.controller = new Stylejonction.Controllers.PortfoliosController({
			portfolio: <%= @portfolio.to_json.html_safe -%>, 
			background: <%= @portfolio.background.to_json.html_safe -%>, 
			projects: <%= @portfolio.projects.to_json.html_safe -%>,
			body_font: <%= @portfolio.body_font.to_json.html_safe -%>,
			title_font: <%= @portfolio.title_font.to_json.html_safe -%>,
			<% if @project.present? %>
				project: <%= @project.to_json.html_safe  -%>,
				cover: <%= @project.cover.to_json.html_safe  -%>,
			<% end %>
			action : '<%= action -%>'
		});
    Backbone.history.start();
  });
</script>
