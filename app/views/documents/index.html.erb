<h1>Listing documents</h1>

<table>
  <tr>
    <th>Title</th>
    <th>File</th>
    <th>Content type</th>
    <th>Filesize</th>
    <th>Document block</th>
    <th>Weight</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @documents.each do |document| %>
  <tr>
    <td><%= document.title %></td>
    <td><%= document.file %></td>
    <td><%= document.content_type %></td>
    <td><%= document.filesize %></td>
    <td><%= document.document_block_id %></td>
    <td><%= document.weight %></td>
    <td><%= link_to 'Show', document %></td>
    <td><%= link_to 'Edit', edit_document_path(document) %></td>
    <td><%= link_to 'Destroy', document, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

