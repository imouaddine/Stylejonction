<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>stylejonction</title>
  <meta name="description" content="">
  <meta name="author" content="">
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
	<%= yield :header %>



</head>
<body>
  <div id="wrapper" >
	
    <section id="page" role="main">
    	 <header id="header">
  			  <nav id="toolbar">
            <ul class="secondary_links">
							<li> Questions? </li>
							<li><a href="#">FAQ</a></li>
							<li><a href="#"> Agent Online</a></li>
							<li><a href="#">Contact us</a></li>
						</ul>
						<ul class="login_links">
              <%= render 'devise/menu/registration_items' %>
              <%= render 'devise/menu/login_items' %>
            </ul>
          </nav>
          <div id="logo">
              <%= link_to image_tag('images/logo.png'), '/' %>
          </div>
					<h1 id="title">
             <%- if user_signed_in? -%>
								<em><%= current_user.full_name %></em>'s portfolio
              <% end %>
							
					</h1>
					<%- if flash[:notice] %>
					    <div id="notice"><%= flash[:notice] %></div>
					<% end %>
  	 	 </header>
		 	 <%- if user_signed_in? %>
				<nav id="main_nav">
					<ul>
					 	<li class="first active">
               <%= link_to 'Portfolio', edit_layout_portfolio_path, :class => 'active' %>
            </li>
						<li><a href="#">Blog</a></li>
						<li><a href="#">Resume</a></li>
						<li><a href="#">Business Card</a></li>
						<li class="secondary"><%= link_to('profile', edit_user_registration_path) %></li>
						<li class="last secondary"><a href="#">stats</a></li>
					</ul>
				</nav>
			 <% end %>
			 <div id="main">
          <%= yield %>
       </div>
				<%= yield :preview %>
			
    </section>
  </div> 
</body>
</html>
